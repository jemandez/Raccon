{{!-- Add layout --}}
{{!< default}}
<section class="godo-cover {{#if @blog.cover}}cover" style="background-image: url({{@blog.cover}}){{/if}}">
  <article class="godo-cover-wrap">
    {{!-- Blog name --}}
    <a class="header-logo u-align-center animated bounceInDown" href="{{@blog.url}}">{{#if @blog.logo}}<img src="{{@blog.logo}}" alt="{{@blog.title}}"/>{{/if}}</a>
    <h1 class="godo-cover-title animated bounceInDown">{{@blog.title}}</h1>
    {{!-- Blog description --}}
    <p class="godo-cover-description animated bounceIn">{{@blog.description}}</p>
    <div class="header-socialList">
      <ul>
        <li><a href="https://twitter.com/jemandez" target="_blank"><span class="social-img c-social icon-twitter"></span></a></li>
        <li><a href="https://www.linkedin.com/in/jemandez" target="_blank"><span class="social-img c-social icon-in"></span></a></li>
        <li><a href="https://www.facebook.com/jemandez" target="_blank"><span class="social-img c-social icon-fb"></span></a></li>
        <li><a href="https://github.com/jemandez" target="_blank"><span class="social-img c-social icon-github"></span></a></li>
        <li><a href="https://www.instagram.com/jemandez/" target="_blank"><span class="social-img c-social icon-instagram"></span></a></li>
        <li><a href="https://plus.google.com/u/1/115890695317788309654" target="_blank"><span class="social-img c-social icon-google-plus"></span></a></li>
      </ul>
    </div>
  </article>
</section>
{{! The tag below includes the post loop - partials/loop.hbs }}
{{> "loop"}}
