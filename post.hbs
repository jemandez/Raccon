{{!-- Add Layout --}}
{{!< default}}
{{#post}}
  {{!-- Progress bar --}}
  <progress value="0" id="progress" class="progress"></progress>

  {{#if image}}
  <section class="post-img {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}"></section>
  {{/if}}
  <section class="main-wrap full-site-width">
    <div class="main-post">
      {{!-- Post Content --}}
      <article class="post">

        {{!-- content post --}}
        <div class="post-main">
          {{!-- Title Post --}}
          <h1 class="post-title">{{title}}</h1>
          {{content}}
          {{!-- Post Share --}}
          <h4>Comparte en:</h4>
          <aside class="share">
            <a class="btn bg-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><i class="icon-facebook"></i> <span>Facebook</span></a>
            <a class="btn bg-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="icon-twitter"></i> <span>Twitter</span></a>
            <a class="btn bg-linkedin" href="https://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&title={{encode title}}" onclick="window.open(this.href, 'linkedin-share', 'width=600,height=494');return false;"><i class="icon-linkedin"></i> <span>Linkedin</span></a>
          </aside>
        </div>

        {{!-- Add Author date --}}
        <div class="post-author">
          {{#author}}
          {{!--Author avatar --}}
          <a href="{{url}}" class="post-author-avatar"><img src="{{#if image}}{{image}}{{else}}{{asset "img/user-image.png"}}{{/if}}" alt="{{name}}" /> </a>
          <div class="post-author-right">

          {{/author}}
            {{!-- Published time --}}
            <div class="post-author-date"><span>Published: </span><time datetime="{{date format='YYYY-MM-DD'}}">{{date published_at timeago="true"}}</time></div>
          </div>
        </div>
      </article>
      {{!-- Previous and next post --}}
      <div class="prev-next-post">
        {{#prev_post}}
        <div class="prev-next-row">
          <a href="{{url}}" class="prev-next-link {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" >
            <h2 class="prev-next-title">{{title}}</h2>
          </a>
          <a href="{{url}}" class="prev-next-btn btn" style="left:24px"><i class="icon-arrow_left"></i> Articulo Anterior</a>
        </div>
        {{/prev_post}}
        {{#next_post}}
        <div class="prev-next-row">
          <a href="{{url}}" class="prev-next-link {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" >
            <h2 class="prev-next-title">{{title}}</h2>
          </a>
          <a href="{{url}}" class="prev-next-btn btn" style="right:24px">Articulo Siguiente <i class="icon-arrow_right"></i></a>
        </div>
        {{/next_post}}
      </div>
      {{!-- Add Disqus Comments --}}
      <section class="comments-post">
			     <div id="disqus_thread"></div>
		  </section>

  		<script type="text/javascript">
  		    /* * * CONFIGURATION VARIABLES * * */
  		    var disqus_shortname = 'jemandez';

  		    /* * * DON'T EDIT BELOW THIS LINE * * */
  		    (function() {
  		        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
  		        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
  		        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
  		    })();
  		</script>
    </div>
    {{!-- Add Sidebar --}}
    {{> "sidebar"}}
  </section>
</main>
{{/post}}
